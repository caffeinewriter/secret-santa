  .donate-bitcoin.
    <script src="http://coinwidget.com/widget/coin.js"></script>
    <script>
    CoinWidgetCom.go({
      wallet_address: "1YXFEVzttsQcbLZqibXSjd9jKrGQvLd1h"
      , currency: "bitcoin"
      , counter: "count"
      , alignment: "bl"
      , qrcode: true

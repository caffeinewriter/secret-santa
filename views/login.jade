extends layout

block content
  if messages
    .flash.error= messages
  h1 Log In
  .login-container
    form.stylish(action='/login', method='POST')
      .input-group
        input.form-input.username(name='username', type='text', placeholder='User ID')
        input.form-input.password(name='password', type='password', placeholder='Password')
      .captcha!= captcha
      br
      input.form-input.submit(type='submit', value='Log In')
